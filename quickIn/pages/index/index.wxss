/**index.wxss**/
page{
  background-color: #ffffff;
}
/* 轮播 */
.swiper{
  width: 100%;
  background-color: #fff;
  height: 300rpx;
}
.li{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.slide-image {
  width: 100%;
  height: 300rpx;
}

/* 列表 */
.searchBox{
  margin: 20rpx auto;
  border: 1rpx #eeeeee solid;
  padding: 10rpx 20rpx;
}
.section{
  border-bottom: 1rpx solid #eeeeee;
  line-height: 80rpx;
  padding: 10rpx 0;
}
.section .locateImg{
  width: 36rpx;
  height: 36rpx;
  margin: auto;
}
.section .rightImg{
  margin: 20rpx 0;
}
.ad-1 { 
  height: 210rpx;
  padding: 10rpx 0;
  background: #fff;
}
.ad-1 image {
  width: 100%;
  height: 100%;
}



.tab-item image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 5rpx;
  vertical-align: middle;
}